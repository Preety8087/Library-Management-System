<!-- Carousel -->
<div id="carouselCaptions" class="carousel slide" data-bs-ride="carousel">
  <div class="carousel-indicators">
    <button type="button" data-bs-target="#carouselCaptions" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
    <button type="button" data-bs-target="#carouselCaptions" data-bs-slide-to="1" aria-label="Slide 2"></button>
    <button type="button" data-bs-target="#carouselCaptions" data-bs-slide-to="2" aria-label="Slide 3"></button>
  </div>
  <div class="carousel-inner">
    <div class="carousel-item active" data-bs-interval="3000">
      <img src="/public/assets/book-library.jpg" class="d-block w-100 carousel-img" alt="library">
      <div class="carousel-caption d-none d-md-block">
        <h5>Second slide label</h5>
        <p>Background photo created by jcomp - <a href='https://www.freepik.com/photos/background'>www.freepik.com</a></p>
      </div>
    </div>
    <div class="carousel-item" data-bs-interval="3000">
      <img src="/public/assets/library-with-books.jpg" class="d-block w-100 carousel-img" alt="library">
      <div class="carousel-caption d-none d-md-block">
        <h5>First slide label</h5>
        <p>Book photo created by ikaika - <a href='https://www.freepik.com/photos/book'>www.freepik.com</a></p>
      </div>
    </div>
    <div class="carousel-item" data-bs-interval="3000">
      <img src="/public/assets/book-library.jpg" class="d-block w-100 carousel-img" alt="library">
      <div class="carousel-caption d-none d-md-block">
        <h5>Third slide label</h5>
        <p>Background photo created by jcomp - <a href='https://www.freepik.com/photos/background'>www.freepik.com</a></p>
      </div>
    </div>
  </div>
  <button class="carousel-control-prev" type="button" data-bs-target="#carouselCaptions" data-bs-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Previous</span>
  </button>
  <button class="carousel-control-next" type="button" data-bs-target="#carouselCaptions" data-bs-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Next</span>
  </button>
</div>

<!-- Main Content -->
<div class="bg-light">
  <div class="container my-4">
    <div class="row d-flex justify-content-center">
      <div class="col-md-11">
        <% if (msg && msg.length !== 0) { %>
          <div class="alert alert-info fw-bold text-center" role="alert">
            <%= msg %>
          </div>
        <% } %>

        <!-- Popular Books Section -->
        <h2 class="my-4">Popular Books</h2>
        <div class="row">
          <% popularBooks.forEach(book => { %>
            <div class="col-lg-2 col-md-4 col-sm-6 col-xs-3 mb-4" style="width: 12rem;">
              <div class="card h-100">
                <img src="<%= '/public/images/' + book._id.cover_image %>" class="card-img-top" alt="<%= book._id.title %>">
                <div class="card-body">
                  <h5 class="card-title"><%= book._id.title %></h5>
                  <p class="card-text"><%= book._id.author %></p>
                  <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#popularBookDetailModal<%= book._id.id %>">View Details</button>
                </div>
              </div>
            </div>
          <% }) %>
        </div>

        <!-- Recent Books Section -->
        <h2 class="my-4">Recent Books</h2>
        <div class="row">
          <% recentBooks.forEach(book => { %>
            <div class="col-lg-2 col-md-4 col-sm-6 col-xs-3 mb-4" style="width: 12rem;">
              <div class="card h-100">
                <img src="<%= '/public/images/' + book.cover_image %>" class="card-img-top" alt="<%= book.title %>">
                <div class="card-body">
                  <h5 class="card-title"><%= book.title %></h5>
                  <p class="card-text"><%= book.author %></p>
                  <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#recentBookDetailModal<%= book._id %>">View Details</button>
                </div>
              </div>
            </div>
          <% }) %>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Popular Book Detail Modal -->
<% popularBooks.forEach(book => { %>
  <div class="modal fade" id="popularBookDetailModal<%= book._id.id %>" tabindex="-1" aria-labelledby="bookDetailModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="bookDetailModalLabel">Book Detail</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
              <div class="container-fluid">
                <div class="row">
                    <div class="col-md-3 mb-3">
                        <img src="<%= '/public/images/' + book._id.cover_image %>" class="img-fluid card-img">
                    </div>
                    <div class="col-md">
                        <ul class="list-group">
                            <li class="list-group-item"><h4><%= `${book._id.title} (${book._id.publish_year})` %></h4></li>
                            <li class="list-group-item"><strong>Stock : </strong> <%= book._id.stock %></li>
                            <li class="list-group-item"><strong>ISBN : </strong> <%= book._id.isbn %></li>
                            <li class="list-group-item"><strong>Author : </strong> <%= book._id.author %></li>
                            <li class="list-group-item"><strong>Page Count : </strong> <%= book._id.page_count %> pages</li>
                            <li class="list-group-item"><strong>Genre : </strong> <%= book._id.genre %></li>
                            <li class="list-group-item"><strong>Description : </strong> <br> <%= book._id.description %></li>
                        </ul>
                    </div>
                </div>
              </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
  </div>
<% }) %>

